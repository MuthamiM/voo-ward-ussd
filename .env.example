NODE_ENV=production
PORT=4000

# MongoDB Atlas (Production)
# Get your connection string from MongoDB Atlas dashboard
# IMPORTANT: Replace username, password, and cluster details
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# JWT Authentication
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here-change-this-to-random-string
JWT_EXPIRY=24h
BCRYPT_ROUNDS=10

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT_MS=1800000

# Logging
LOG_LEVEL=info

# Features
ENABLE_CHAT_HISTORY=false
ENABLE_ANALYTICS=true

# AWS S3 (Optional - for profile picture cloud storage)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1

# Email (Optional - for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_password

# OpenAI API (Required for AI Assistant "Mai" and Issue Categorization)
# Get your key from: https://platform.openai.com/account/api-keys
# SECURITY WARNING: Never commit the actual key to git!
# Set this via environment variable in Render dashboard or deployment platform
OPENAI_API_KEY=

# Frontend URL (for CORS security)
# Add your production frontend domain here
FRONTEND_URL=https://your-frontend-domain.com

# Twilio WhatsApp Integration (Optional - for WhatsApp notifications)
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_PHONE_NUMBER=

# Redis Cache (Optional - for performance optimization)
# Local: redis://localhost:6379
# Cloud: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Sentry Error Monitoring (Optional - for production error tracking)
# Get DSN from: https://sentry.io/
SENTRY_DSN=
