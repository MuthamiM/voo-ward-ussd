# Database
MONGO_URI=your_mongodb_connection_string
MONGODB_URI=your_mongodb_connection_string

# Application
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://your-production-domain.com

# Security
SESSION_SECRET=generate_a_random_32_character_hex_string_here

# OAuth - Facebook
# Get these from https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth - Twitter
# Get these from https://developer.twitter.com/apps  
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret

# OAuth Callback URL
# Set this to your production domain (must use HTTPS)
OAUTH_CALLBACK_URL=https://your-production-domain.com

# Optional - AWS S3 for avatar uploads
S3_BUCKET=your_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_REGION=us-east-1

# Termii SMS (for OTP)
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=your_sender_id
